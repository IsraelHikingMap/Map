//coastline 150
//farmland 401
//scrub 401
//wood 401
//quarry 402
//residential 402
//grass 403
//industrial 403
//commercial 403
//playground 403
//contour 404
//cemetery icon 405
//building 406
//military 410
//Pal 410
//cutline 440
//wetland 450
//stream 500
//river 502
//water 503
