features
	points, areas
		church worship: amenity=place_of_worship AND (religion=christian OR religion=Christian)
		mosque worship: amenity=place_of_worship AND (religion=muslim OR religion=Muslim)
		synagogue worship: amenity=place_of_worship AND (religion=jewish OR religion=Jewish)
		bahai worship: amenity=place_of_worship AND (religion=bahai OR religion=Bahai)
		railway station : railway=station
		parking : amenity=parking
		power tower : @isOneOf(power, tower, station, sub_station)
		legend : @isOneOf(legend, header, background, area_missing)
		// text for point/area is used in order to group all the text rendering into one place and to avoid multiple labels.
		POI text : @isOneOf(natural, peak, spring, tree, cave_entrance, waterhole) OR water=pond OR @isOneOf(man_made, water_well, cistern) OR @isOneOf(leisure, picnic, picnic_table) OR @isOneOf(amenity, parking) OR @isOneOf(tourism, picnic_site, camp_site, viewpoint, attraction) OR @isOneOf(historic, ruins, archaeological_site, memorial, monument) OR legend=point_missing OR railway=station
		forest label: (landuse=forest OR natural=wood) AND width
		fuel: amenity=fuel
		nature reserve label : boundary=national_park OR boundary=protected_area OR leisure=nature_reserve

	points
		place : place OR landuse=farmyard
		peak : natural=peak
		water spring : natural=spring OR water=pond
		water well : man_made=water_well
		water cistern : man_made=cistern
		water waterhole : natural=waterhole
		picnic : @isOneOf(leisure, picnic, picnic_table) OR tourism=picnic_site
		camp site : tourism=camp_site
		view : tourism=viewpoint
		ruins : historic=ruins
		archaeological : historic=archaeological_site
		memorial : historic=memorial
		cave : natural=cave_entrance
		tree : node[natural=tree]
		guidepost : information=guidepost
		watertower : man_made=water_tower
		monument : historic=monument
		gate : node[barrier]
		grid label north : grid AND @isMulti(east, 10) AND @isMulti(north, 2)
		grid label east : grid AND @isMulti(north, 10) AND @isMulti(east, 2)

	lines
		aerialway : aerialway and not aerialway=station
		aeroway : aeroway
		contour major : contour[@isMulti(elevation, 100)]
		contour minor : contour[@isMulti(elevation, 10) and not @isMulti(elevation, 100)]
		hiking regional jesus trail: relation[network = rwn @isMatch(name:en,"Jesus Trail")]
		hiking regional golan trail: relation[network = rwn @isMatch(name:en1,"Golan Trail")]
		hiking regional kinneret perimeter cycle route : relation[network = rcn @isMatch(name:en1,"Sea of Galilee Bicycle Route")]
		hiking regional kinneret trail : relation[network = rwn @isMatch(name:en,"Kinneret Trail")]
		hiking regional jerusalem trail: relation[network = rwn @isMatch(name:en,"Jerusalem Trail")]
		hiking regional northern galilee trail: relation[network = rwn @isMatch(name:en,"Northern Galilee Regional Trail")]
		hiking regional coast to coast: relation[network = rwn @isMatch(name:en,"Coast to Coast")]
		hiking regional haifa wadis: relation[network = rwn @isMatch(int_name,"Haifa Wadis Trail")]
		hiking national: relation[network = nwn]

		cycle path : highway=cycleway OR (highway=path AND bicycle=designated)
		path : highway=path AND NOT bicycle=designated
		foot path : highway=footway OR highway=pedestrian
		steps path : highway=steps
		road major motorway : @isOneOf(highway, motorway, motorway_link) AND NOT @isMatch(is_in, "Jordan|Egypt|Syria|Lebanon")
		road major trunk : @isOneOf(highway, trunk, trunk_link) AND NOT @isMatch(is_in, "Jordan|Egypt|Syria|Lebanon")
		road major primary : @isOneOf(highway, primary, primary_link) AND NOT @isMatch(is_in, "Jordan|Egypt|Syria|Lebanon")
		road major secondary : @isOneOf(highway, secondary, secondary_link) AND NOT @isMatch(is_in, "Jordan|Egypt|Syria|Lebanon")
		road major tertiary : @isOneOf(highway, tertiary, tertiary_link) AND NOT @isMatch(is_in, "Jordan|Egypt|Syria|Lebanon")
		road minor : @isOneOf(highway, residential, unclassified, living_street, service, road) AND NOT @isMatch(is_in, "Jordan|Egypt|Syria|Lebanon")
		track major : highway=track AND @isOneOf(tracktype, grade1, grade2)
		track minor : highway=track AND (tracktype=grade3 OR NOT tracktype)
		track grade4 : highway=track AND tracktype=grade4
		track grade5 : highway=track AND tracktype=grade5
		track major colour2 : highway=track AND @isOneOf(tracktype, grade1, grade2) AND @isMatch(colour, ";")
		track minor colour2 : highway=track AND (tracktype=grade3 OR NOT tracktype) AND @isMatch(colour, ";")
		track grade4 colour2 : highway=track AND tracktype=grade4 AND @isMatch(colour, ";")
		track grade5 colour2 : highway=track AND tracktype=grade5 AND @isMatch(colour, ";")
		railway rail : railway=rail
		power line : @isOneOf(power, line, minor_line)
		stream : @isOneOf(waterway, stream, river, wadi, canal)
		cliff : natural=cliff
		fence : way[barrier=fence] relation[route = fence AND @isMatch(name:en,"Israeli West Bank barrier")]
		// Avoid rendering more than 7500 barrier=wall around Battir - http://overpass-turbo.eu/s/eNU
		wall  : way[barrier=wall AND NOT SYMBOL=519.0]
		boundary country : boundary=administrative AND admin_level=2 AND NOT natural=coastline
		grid : grid
		legend : legend=line_missing
		nature reserve boundary outer : way[width (@isOneOf(boundary, national_park, protected_area) OR leisure=nature_reserve) (@isOneOf(outer_boundary, boundary, leisure) OR NOT @isOneOf(inner_boundary, boundary, leisure))]
		nature reserve boundary inner : way[width (@isOneOf(boundary, national_park, protected_area) OR leisure=nature_reserve)  @isOneOf(inner_boundary, boundary, leisure)]
		nature reserve boundary : boundary=national_park OR boundary=protected_area OR leisure=nature_reserve

	areas
		building : building=yes
		cemetery : landuse=cemetery OR amenity=grave_yard
		forest : landuse=forest OR natural=wood
		grass : @isOneOf(landuse, grass, greenfield, village_green) OR @isOneOf(natural, scrub, heath, grassland) OR leisure=park
		water : natural=water OR waterway=riverbank OR landuse=reservoir OR landuse=basin
		military : landuse=military OR military=danger_area
		beach :  @isOneOf(natural, beach, sand)
		quarry : landuse=quarry
		field : @isOneOf(landuse, field, meadow)
		plantation : @isOneOf(landuse, orchard, vineyard)
		farm : @isOneOf(landuse, farmland, farmyard)
		residential : landuse=residential
		Area A : relation[boundary=administrative AND admin_level=3 AND name="Area A"]
		Area B : relation[boundary=administrative AND admin_level=3 AND name="Area B"]

properties
	// curved : true
	text-halo-width : 30%
	text-halo-opacity : 0.75
	map-background-color : white
	map-background-opacity : 1

rules
	target : place
		for : place=city
			define
				min-zoom : 8
				max-zoom : 14
				font-size : 8:12;10:16;14:20
		elsefor : place=town
			define
				min-zoom : 11
				font-size : 10:12;16:20
		elsefor : place=village
			define
				min-zoom : 13
				font-size : 13:10;16:20
		elsefor : place=hamlet
			define
				min-zoom : 14.5
				font-size : 14.5:10;16:16
		elsefor : place=farm OR landuse=farmyard OR landuse=farmland
			define
				min-zoom : 15
				font-size : 15:8;16:14
		else
			stop
		define
			font-weight : bold
		// Hebrew preference for points & areas
		for : @isMatch(name, "[א-ת]")
			define
				text : name
		else
			define
				text : @any([[name:he]], [[name:en]], name)
		draw : text

	target : peak
		define
			fill-color : black
			line-style : none
			min-zoom : 13
			shape : circle
			shape-size : 11:2;15:3
		draw : shape

	target : water *
		define
			shape : circle
			shape-size : 3
			line-color : blue
			line-style : solid
			line-width: 2
			min-zoom : 12
			fill-opacity : 0
		if : water spring
			define
				fill-color : blue
				fill-opacity : 100%
				line-style : none
		elseif: water waterhole
			define
				shape : custom
				// Original definition: lower half-circle
				// shape-def : m:-1,0;a:1,1,1,0
				// Workaround: instructions for left-right flipped lower half-circle
				shape-def : m:-1,0;a:1,1,-3,0
				shape-size : 30
		draw : shape

	target : water well
		// create the inner dot for water well
		define
			shape : circle
			shape-size : 1
			line-style : none
			min-zoom : 12
			fill-color : blue
		draw : shape

	target : picnic
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/tourist_picnic.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target : parking
		define
			min-zoom : 15
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/transport_parking.n.32.png
			icon-width : 14
		for : legend
			define
				min-zoom : 13
		draw : icon

	target : fuel
		define
			min-zoom : 15
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/transport_fuel.glow.32.png
			icon-width : 24
		draw : icon

	target : camp site
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/accommodation_camping.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target : view
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/tourist_view_point.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target : ruins
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/tourist_ruin.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target : archaeological
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/tourist_archaeological2.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target : memorial
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/tourist_memorial.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target : tree
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/landuse_deciduous.green.glow.24.png
			icon-width : 14:16;15:24
		draw : icon

	target : cave
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/poi_cave.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target: *worship
		if : church*
			define
				icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/place_of_worship_christian3.glow.32.png
		elseif : mosque*
			define
				icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/place_of_worship_islamic3.glow.32.png
		elseif : synagogue*
			define
				icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/place_of_worship_jewish3.glow.32.png
		elseif : bahai*
			define
				icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/place_of_worship_bahai3.glow.32.png
		define
			icon-width : 14:16;20:30
		for : tourism=attraction
			define
				min-zoom : 13
		else
			define
				min-zoom : 14
		draw : icon

	target : railway station
		define
			min-zoom : 11
			shape : square
			shape-size : 11:0;15:6;17:20
			fill-color : white
		draw : shape

	target : power tower
		define
			min-zoom : 15
			shape : square
			shape-size : 16:7;20:12
			fill-color : black
			line-style : none
		draw : shape

	target : guidepost
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/tourist_guidepost.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target : watertower
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/water_tower.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target : monument
		define
			min-zoom : 13
			icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/tourist_monument.glow.32.png
			icon-width : 14:16;15:24
		draw : icon

	target : gate
		define
			min-zoom : 15
			icon-width : 16
		for : barrier=gate
			for : access=no OR motor_vehicle=no
				define
					icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/barrier_gate.n.32.png
			else
				define
					icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/barrier_gate.glow.32.png
		elsefor : barrier=kissing_gate OR barrier=stile
			define
				icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/barrier_kissing_gate.glow.32.png
		elsefor : barrier=lift_gate
			define
				icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/barrier_lift_gate.glow.32.png
		elsefor : barrier=block OR barrier=debris
			define
				icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/barrier_blocks.n.32.png
		elsefor : barrier=cattle_grid
			define
				icon-image : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/barrier_cattle_grid.glow.32.png
				icon-width: 24
		for : legend
			define
				min-zoom : 13
				icon-width : 18
		draw : icon

// by using this statement we make sure only one label is written for POI with more than one tag
// it also reduces code duplication and creates unity among the labels
	target : POI text
		define
			min-zoom : 15
			font-size : 10
			text-offset-vertical : 120%
			text : name
		for : natural=peak OR tourism=viewpoint
			define
				font-family : Cambria
				font-style : italic
				font-weight : bold
				font-size : 13:10;15:15
				min-zoom : 13
				text-color : black
				text-max-width : 15
				text-halo-width : 30%
				text-halo-opacity : 0.75
			for : ele
				// If ele is set
				define
					text-align-horizontal : far
					text-align-vertical : center
					text-offset-vertical : 20%
					text-offset-horizontal : -70%
					text : ele
				draw : text
			for : name
				// If name is defined
				define
					text-align-vertical : far
					text-align-horizontal : center
					text-offset-vertical : -70%
					text-offset-horizontal : 0
				for : legend
					define
						font-size : 13:8;16:18
						text-offset-vertical : 175%
		elsefor : @isOneOf(natural, spring, waterhole) OR water=pond OR @isOneOf(man_made, water_well, cistern)
			define
				text-color : blue
				min-zoom : 13
		for : legend
			define
				min-zoom : 13
				font-family : Arial
				font-style : normal
				font-weight : normal
				font-size : 13:8;16:18

		// Hebrew preference for points & areas
		for : @isMatch(name, "[א-ת]")
			define
				text : name
		else
			define
				text : @any([[name:he]], [[name:en]], name)
		draw : text

	target : nature reserve label
		for : inner_boundary OR inner_leisure
			stop
		define
			font-size : 12
			text-color : green
			font-weight : normal
		for : width > 10
			define
				min-zoom : 11
		elsefor : width > 5
			define
				min-zoom : 12
		elsefor : width > 2
			define
				min-zoom : 13
		elsefor : width > 1
			define
				min-zoom : 14
		else
			define
				min-zoom : 15
		// Hebrew preference for points & areas
		for : @isMatch(name, "[א-ת]")
			define
				text : name
		else
			define
				text : @any([[name:he]], [[name:en]], name)
		draw : text


