			font-size : 12
			text-func : NodeName(e)
		draw : text
	target : forest
		define
			line-style : none
			line-width : 1
			min-zoom : 9
			fill-texture : Textures/ForestNoiseLighter.jpg
		draw : fill

	target : beach
		for : natural=sand
			define
				fill-opacity : 10%
		define
			line-style : none
			line-width : 1
			fill-color : #FFEC8B
		draw : fill
		define
			min-zoom : 13
			font-size : 12
			text-color : black
			text-func : NodeName(e)
		draw : text

	target : quarry
		define
			line-style : solid
			line-color : black white 40%
			line-width : 1
			min-zoom : 12
			fill-texture : Textures/Rendering-landuse-quarry-mapnik-light.png
		draw : fill
		draw : line
		define
			min-zoom : 13
			font-size : 12
			text-color : black
			text-func : NodeName(e)
		draw : text

	target : farmland
		define
			line-style : none
			line-width : 0
			//fill-color : #E6DDD0
			fill-texture : Textures/farmland.png
			fill-opacity : 0.3
		draw : fill

	target : grass
		define
			line-style : none
			line-width : 1
			fill-color : #E9FDE0
		draw : fill

	target : plantation
// based on : http://wiki.openstreetmap.org/wiki/Tag:landuse%3Dorchard#Rendering
		define
			line-style : none
			line-width : 0
			fill-texture : Textures/plantation-light.png
		draw : fill


// residential should be last
	target : residential
		define
			line-style : solid
			line-color : black white 40%
			line-width : 1
			fill-color : white black 10%
