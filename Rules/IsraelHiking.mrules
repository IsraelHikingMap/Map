			fill-color : red
			fill-hatch : swne
			fill-hatch-color : white
			fill-hatch-opacity : 0
			fill-opacity : 60%
			line-style : none
		for : legend
			define
				painting-cycle : 590
		draw : fill
		for : legend=area
			define
				min-zoom : 13
				font-size : 12
				text-color : red
				font-weight : normal
			// Hebrew preference for points & areas
			for : @isMatch(name, "[א-ת]")
				define
					text : name
			else
				define
					text : @any([[name:he]], [[name:en]], name)
			draw : text

	target : boundary*
		// Avoid maritime borders
		for : maritime=yes
			stop
		define
			line-color : #9E1A99
			line-opacity : 0.75
		if : boundary country
			for : @isMatch(name, "1949 .*$")
				// 1949 armistice line - "The Green Line"
				define
					line-color : green
			elsefor : note = "UN Resolution 497, UNDOF"
				// Israel-Syria Agreement on Disengagement Line A "Alpha"
				define
					line-color : blue
			elsefor : note = "UNDOF line Bravo"
				// Israel-Syria Agreement on Disengagement Line B "Bravo"
				define
					line-color : red
			elsefor : note = "DMZ"
				stop
			else
				define
					line-color : black
					line-width : 1.5
					shape : custom
					shape-def : 0,3;0,-3;m:3,0;-3,0
					shape-spacing : 0.5
					shape-size : 6
				draw : shape
				define
					line-style : none
			define
				line-width : 6:1;9:3;10:6
		draw : line

	target : water
		define
			line-width : 1
			line-color : #78C1C1 blue 10%
			fill-color : #78C1C1 white 10%
		for : intermittent = yes
			define
				min-zoom : 13
				line-style : dashlong
			draw : line
		else
			draw : fill
		define
			min-zoom : 14.1
			font-size : 15:10;17:17
			font-style : italic
			font-weight : bold
			text-color : #78C1C1 black 10%
		// Hebrew preference for points & areas
		for : @isMatch(name, "[א-ת]")
			define
				text : name
		else
			define
				text : @any([[name:he]], [[name:en]], name)
		draw : text

	target : cemetery
		define
			line-style : none
			line-width : 1
			fill-color : #CCCCCC
		for : legend
			define
				painting-cycle : 590
		draw : fill

	target : forest label
		for : width > 10
			define
				min-zoom : 11
		elsefor : width > 5
			define
				min-zoom : 12
		elsefor : width > 2
			define
				min-zoom : 13
		elsefor : width > 1
			define
				min-zoom : 14
		elsefor : width > 0.5
			define
				min-zoom : 15
		elsefor : width > 0.2
			define
				min-zoom : 16
		else
			stop
		define
			font-size : 12
		// Hebrew preference for points & areas
		for : @isMatch(name, "[א-ת]")
			define
				text : name
		else
			define
				text : @any([[name:he]], [[name:en]], name)
		draw : text
	target : forest
		define
			line-style : none
			line-width : 1
			min-zoom : 9
			// fill-color : #8DC56C white 60%
			fill-texture : Textures/ForestNoiseLight.jpg
		for : legend
			define
				painting-cycle : 590
		draw : fill

	target : beach
		for : natural=sand
			define
				fill-opacity : 0.2
		define
			line-style : none
			line-width : 1
			fill-color : #FFEC8B
		for : legend
			define
				painting-cycle : 590
		draw : fill
		define
			min-zoom : 13
			font-size : 12
			text-color : black
			text : name
		// Hebrew preference for points & areas
		for : @isMatch(name, "[א-ת]")
			define
				text : name
		else
			define
				text : @any([[name:he]], [[name:en]], name)
		draw : text

	target : quarry
		define
			line-style : solid
			line-color : black white 40%
			line-width : 1
			min-zoom : 9
			fill-texture : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/Rendering-landuse-quarry-mapnik.png
		for : legend
			define
				painting-cycle : 590
		draw : fill
		draw : line
		define
			min-zoom : 13
			font-size : 12
			text-color : black
			text : name
		// Hebrew preference for points & areas
		for : @isMatch(name, "[א-ת]")
			define
				text : name
		else
			define
				text : @any([[name:he]], [[name:en]], name)
		draw : text

	target : field
		define
			line-style : none
			line-width : 0
			//fill-color : #E6DDD0
			fill-texture : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/field.png
			fill-opacity : 0.3
		for : legend
			define
				painting-cycle : 590
		draw : fill

	target : grass
		define
			line-style : none
			line-width : 1
			fill-color : #E9FDE0
		for : legend
			define
				painting-cycle : 590
		draw : fill
		define
			line-style : none
			line-width : 0
			fill-texture : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/SJJB/landuse_grass.p.32.png
		draw : fill

	target : plantation
// based on : http://wiki.openstreetmap.org/wiki/Tag:landuse%3Dorchard#Rendering
		define
			line-style : none
			line-width : 0
			fill-texture : https://raw.githubusercontent.com/IsraelHikingMap/Map/master/Icons/plantation.png
		for : legend
			define
				painting-cycle : 590
		draw : fill

	target : Area *
		define
			line-style : solid
			line-width : 1
			line-color : orange
			min-zoom : 9
			fill-opacity : 50%
		draw : line
		if : * A
			define
				fill-color : orange white 40%
		elseif : * B
			define
				fill-color : orange white 70%
		else
			stop
		draw : fill


// residential should be last
	target : residential
		define
			line-style : solid
			line-color : black white 40%
			line-width : 1
			fill-color : white black 10%
			min-zoom : 10
		for : legend
			define
				painting-cycle : 590
		draw : fill
		draw : line
		define
			min-zoom : 17
		// Hebrew preference for points & areas
		for : @isMatch(name, "[א-ת]")
			define
				text : name
		else
			define
				text : @any([[name:he]], [[name:en]], name)
		draw : text

